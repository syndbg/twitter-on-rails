<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="flex-block flex-horizontal-center gravatar-edit">
        <%= gravatar_for @user %>
        <a class="flex-block flex-vertical-center" href="http://gravatar.com/emails" target="_blank">change</a>
      </div>

      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
